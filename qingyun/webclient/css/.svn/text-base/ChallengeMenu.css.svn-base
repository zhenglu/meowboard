#ChallengeMenu
{
	font-size	: 11px;
	color		: #216778;
	border-style	: solid;
	border-width	: 2px;
	border-color	: #216778;

	width		: 240px;
	height		: 270px;

	overflow-y	: auto;
	overflow-x	: hidden;

	padding		: 10px;
	background-color: #ffffff;

	position	: absolute;
}


#ChallengeMenu ul
{
	list-style	: none;
	padding		: 0px;
	margin-top	: 3px;
	margin-bottom	: 5px;

	border-bottom	: 1px solid #FFA200;
}

#ChallengeMenu ul #title
{
	font-weight	: bold;
}

#ChallengeMenu ul #announce 
{
	font-style	: italic;

	border-bottom	: 1px solid #216778;

	cursor		: pointer;
}

#ChallengeMenu li
{
	margin-top	: 5px;

	padding-left	: 20px;
	padding-top	: 5px;
	display		: block;
	height		: 20px;
	width		: 210px;
}

#ChallengeMenu li:hover
{
	background-color: #D4F3F5;
}

#ChallengeMenu li.offline
{
	color		: #777777;
	background-image: url('../images/challenge_menu/disable.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li.undefined
{
	background-image: url('../images/challenge_menu/disable.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li.random
{
	background-image: url('../images/challenge_menu/random.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li.white
{
	background-image: url('../images/challenge_menu/white_enable.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li.black
{
	background-image: url('../images/challenge_menu/black_enable.png');
	background-repeat: no-repeat;
}

#ChallengeMenu p
{
	margin		: 0px;
	padding		: 0px;
	float		: left;
}

#ChallengeMenu li #name
{
	width		: 70px;
}

#ChallengeMenu li #time
{
	width		: 30px;
}

#ChallengeMenu li #inc
{
	width		: 30px;
}

#ChallengeMenu li #rated
{
	font-style	: italic;
	width		: 40px;
}
#ChallengeMenu li #rated.false
{
	color		: #777777;
}

#ChallengeMenu li #rated.true
{
	color		: #216778;
}

#ChallengeMenu li #private
{
	width		: 30px;
	height		: 12px;
}
#ChallengeMenu li #private.true
{
	background-image: url('../images/challenge_menu/observer.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li #private.false
{
	background-image: url('../images/challenge_menu/observer_disable.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li #button
{
	width		: 10px;
	height		: 10px;
	cursor		: pointer;
}

#ChallengeMenu li #button.accept
{
	background-image: url('../images/challenge_menu/accept.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li #button.decline
{
	background-image: url('../images/challenge_menu/decline.png');
	background-repeat: no-repeat;
}

#ChallengeMenu li #button.inative
{
	background-image: url('../images/challenge_menu/accept_disable.png');
	background-repeat: no-repeat;
	cursor		: default;
}

#ChallengeMenu li #date
{
	width		: 71px;
}

#ChallengeMenu li #category
{
	width		: 58px;
}
