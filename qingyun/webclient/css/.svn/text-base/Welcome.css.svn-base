#Welcome{
	position	: absolute;
	left		: 50%;

	margin-top	: 50px;
	margin-left	: -22%;

	width		: 550px;

	border 		: 2px solid #216778;

	font-size	: 11px;
	color		: #216778;

	background-color: #FFF;

}

#Welcome h1{
	text-align	: center;
	margin		: 10px;
	font-weight : bold;
}

#Welcome p {
	margin		: 10px;
	text-align	: justify;
}

#Welcome p.center{
	text-align	: center;
	margin-bottom	: 20px;
}

#Welcome b {
	font-weight : bold;
}

#WelcomeCenter{
	display		: block;
	position	: relative;
	width		: 100%;
	height		: 250px;
}

#WelcomeImage{
	background-image: url("../images/welcome/welcome_board.png");
	background-repeat: no-repeat;

	height		: 240px;
	width		: 235px;
	float		: left;
	margin-left	: 26px;
}

#WelcomeInstruction{
	float		: left;
	height		: 240px;
	width		: 235px;
	overflow	: auto;

	margin-left	: 26px;
}

#WelcomeInstruction ul {
	list-style-image: url("../images/welcome/welcome_dot.png");
}

#WelcomeInstruction li{
	margin-left	: 25px;
	margin-bottom	: 5px;
	text-align	: justify;
}

#WelcomeClose{
	position	: absolute;
	top 		: -15px;
	right		: -2px;

	width		: 15px;
	height		: 15px;

	font-weight	: bold;
	color		: #FFF;

	background-color: #216778;
	cursor		: pointer;

	text-align	: center;
}
